<?xml version="1.0" encoding="utf-8"?>

<!--
    This file contains the base light theme definition used by all API levels
    and any styles it needs for its attributes
-->

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Collect.DreamSave" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Material theme attributes-->
        <item name="colorPrimary">#FFF8E9C5</item>
        <item name="colorPrimaryDark">#FFFCDC95</item>
        <item name="colorSecondary">#FF324B5A</item>

        <item name="colorError">@color/red_500</item>

        <item name="colorPrimaryVariant">?colorPrimary</item>
        <item name="colorSecondaryVariant">?colorSecondary</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorOnError">#000000</item>
        <item name="colorOnSurface">?colorSecondary</item>
        <item name="scrimBackground">@color/mtrl_scrim_color</item>
        <item name="colorButtonNormal">#FF68C7C2</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.MaterialComponents.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MaterialComponents.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Collect.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Collect.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Theme.Collect.DreamSave.HeadLine6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Collect.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Collect.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Collect.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Collect.DreamSave.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Collect.DreamSave.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Collect.DreamSave.Overline</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MaterialComponents.LargeComponent</item>
        <!--/Material theme attributes-->

        <item name="android:scrollbarThumbHorizontal">@drawable/thumb</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb</item>
        <item name="android:scrollbarSize">1.75mm</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="colorAccent">?colorSecondary</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:panelBackground">@android:color/white</item>
        <item name="alertDialogTheme">@style/Theme.Collect.Light.Dialog.Alert</item>
        <item name="android:alertDialogTheme">@style/Theme.Collect.Light.Dialog.Alert</item>
        <item name="searchViewStyle">@style/Widget.Collect.SearchView</item>
        <item name="iconColor">#000000</item>
        <item name="android:textDirection" tools:targetApi="17">locale</item>
        <item name="android:tintMode" tools:targetApi="21">src_in</item>
    </style>

    <style name="Theme.Collect.DreamSave.HeadLine6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="titleTextColor">?attr/colorSecondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">4sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>

    <style name="Theme.Collect.DreamSave.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="dialogCornerRadius">8dp</item>
    </style>

    <style name="Theme.Collect.DreamSave.Calendar.DatePicker.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="dialogCornerRadius">8dp</item>
    </style>

    <style name="Theme.Collect.DreamSave.Spinner.DatePicker.Dialog" parent="Theme.Collect.Light.Dialog.Alert">
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
    </style>

    <style name="Theme.Collect.DreamSave.Spinner.TimePicker.Dialog" parent="Theme.Collect.Light.Dialog.Alert">
        <item name="android:timePickerStyle">@style/Theme.Collect.Light.Spinner.TimePicker</item>
    </style>

    <style name="Theme.Collect.DreamSave.Spinner.TimePicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="TextAppearance.Collect.DreamSave.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:height">45dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

    <style name="TextAppearance.Collect.DreamSave.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="background">?colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Collect.DreamSave.Overline" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="background">?colorSecondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.166666667</item>
    </style>

</resources>
